<script>
  function filterTable() {
    const hoTenFilter = document.getElementById('filterHoTen').value.toLowerCase();
    const canHoFilter = document.getElementById('filterCanHo').value.toLowerCase();
    const soHoKhauFilter = document.getElementById('filterSoHoKhau').value.toLowerCase();

    const rows = document.querySelectorAll('tbody tr');

    rows.forEach(row => {
      const idSoHoKhau = row.cells[0].textContent.toLowerCase();
      const idCanHo = row.cells[1].textContent.toLowerCase();
