  <script>
    function openOverlay(idCanHo) {
      fetch(`/admin/canho/${idCanHo}`)
        .then(response => response.json())
        .then(data => {
          document.getElementById('editIdCanHo').value = data.idCanHo;
          document.getElementById('editLoai').value = data.loai;
          document.getElementById('editDienTich').value = data.dienTich;
          document.getElementById('editTrangThai').value = data.trangThai;
          document.getElementById('editSoXeMay').value = data.soXeMay;
          document.getElementById('editSoOto').value = data.soOto;
          document.getElementById('overlay').style.display = 'flex';
        })
        .catch(err => alert("Kh√¥ng th·ªÉ t·∫£i d·ªØ li·ªáu cƒÉn h·ªô."));
    }

    function closeOverlay() {
      document.getElementById('overlay').style.display = 'none';
    }

    function saveChanges() {
      const id = document.getElementById('editIdCanHo').value;
      const body = {
        loai: document.getElementById('editLoai').value,
        dienTich: document.getElementById('editDienTich').value,
        trangThai: document.getElementById('editTrangThai').value,
        soXeMay: document.getElementById('editSoXeMay').value,
        soOto: document.getElementById('editSoOto').value
      };

      fetch(`/admin/canho/${id}/update`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body)
      })
      .then(response => {
        if (response.ok) return response.json();
        else throw new Error("L·ªói khi c·∫≠p nh·∫≠t");
      })
      .then(data => {
        alert(data.message || 'C·∫≠p nh·∫≠t th√†nh c√¥ng!');
        location.reload();
      })
      .catch(err => alert(err.message));
    }

    function filterTable() {
      const idFilter = document.getElementById('filterCanHo').value.toLowerCase();
      const loaiFilter = document.getElementById('filterLoaiCanHo').value.toLowerCase();
      const trangThaiFilter = document.getElementById('filterTrangThai').value.toLowerCase();

      const rows = document.querySelectorAll('.table-nhankhau tbody tr');

      rows.forEach(row => {
        const id = row.cells[0].textContent.toLowerCase();
        const loai = row.cells[1].textContent.toLowerCase();
        const trangThai = row.cells[3].textContent.toLowerCase();

        const matchId = id.includes(idFilter);
        const matchLoai = !loaiFilter || loai === loaiFilter;
        const matchTrangThai = !trangThaiFilter || trangThai === trangThaiFilter;

        if (matchId && matchLoai && matchTrangThai) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    }

    function resetFilter() {
      document.getElementById('filterCanHo').value = '';
      document.getElementById('filterLoaiCanHo').value = '';
      document.getElementById('filterTrangThai').value = '';
      filterTable();
    }
  </script>

