<div class="container py-5">
    <!-- Nút quay lại -->
    <div class="back-link-wrapper">
        <a href="/admin/tuthien" class="back-link">
            <span class="back-link__icon">←</span>
            <span class="back-link__text">Trở về danh sách từ thiện</span>
        </a>
    </div>
    <h2 class="fw-bold mb-4 green-header" style="text-align: center;">{{quy.tenQuy}}</h2>

    <!-- Bộ lọc -->
    <form class="d-flex align-items-center mb-4" method="GET">
        <div class="me-3">
            <label for="idCanHo" class="form-label">ID Căn hộ</label>
            <input type="text" id="idCanHo" name="idCanHo" class="form-control" placeholder="Nhập ID căn hộ"
                value="{{idCanHo}}">
        </div>

        <button type="submit" class="btn btn-primary me-2 mt-4">Tìm kiếm</button>
        <a href="/admin/tuthien/{{quy.idQuyTuThien}}-{{quy.slug}}" class="btn btn-secondary mt-4">Làm mới</a>
    </form>

    <!-- Nút thêm mới -->
    <a href="/admin/tuthien/{{quy.idQuyTuThien}}-{{quy.slug}}/ungho" class="btn btn-success mb-3">+ Ủng hộ</a>


    <!-- Thông tin tổng quan -->
    <div class="mb-4 p-3 border rounded bg-light">
        <div class="row">
            <div class="col-md-6">
                {{#if quy}}
                <p><strong>Tên quỹ:</strong> {{quy.tenQuy}}</p>
                {{else}}
                <p class="text-danger">Không có dữ liệu quỹ</p>
                {{/if}}
                <p><strong>Mô tả:</strong> {{quy.mota}}</p>
                <p><strong>Trạng thái:</strong> {{trangThai}}</p>
            </div>
            <div class="col-md-6">
                <p><strong>Thời gian:</strong> {{formatDate quy.ngayBatDau}} đến {{formatDate quy.ngayKetThuc}}</p>
                <p><strong>Tổng số tiền đã đóng góp:</strong> {{tongSoTien}} VND</p>
                <p><strong>Số lượng căn hộ đã đóng góp:</strong> {{soLuongCanHo}}</p>
            </div>
        </div>
    </div>


    <!-- Bảng dữ liệu -->
    <div class="table-responsive">
        <table class="table table-bordered my-custom-table">
            <thead class="table-light">
                <tr>
                    <th>STT</th>
                    <th>ID Căn hộ</th>
                    <th>Số tiền</th>
                    <th>Ngày đóng</th>
                </tr>
            </thead>
            <tbody>
                {{#each dongGopList}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.idCanHo}}</td>
                    <td>{{this.soTienDaDong}} VND</td>
                    <td>{{formatDate this.thoiGianDongTien}}</td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="4" class="text-center">Không có dữ liệu</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>